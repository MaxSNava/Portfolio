---
import {basics} from '@cv';
import Section from '@/components/Section.astro';

const {name, label, image, email, phone, profiles} = basics;
const {city, region} = basics.location;
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span> <i class="nes-icon coin is-small"></i> {city}, {region} </span>
      <footer>
        {
          email && (
            <a 
              href={`mailto:${email}`} 
              title={`Enviar un correo electronico a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
              >
              <i class="nes-icon gmail "></i>
            </a>
          )
        }
        {
          phone && (
            <a 
              href={`tel:${'444 444 44-44'}`} 
              title={`Enviar un mensaje a ${name} al telefono ${'444 444 44-44'}`}
              target="_blank"
              rel="noopener noreferrer"
              >
              <i class="nes-icon whatsapp "></i>
            </a>
          )
        }
        {
          profiles.map(({network,url})=> {
            return (
              <a 
                href={url}
                title={`Visitar el perfil de ${name} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
                >
                <i class={`nes-icon ${network} `}></i>
              </a>
            )
          })
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }
  h1 {
    font-size: 2rem;
  }
  h2 {
    color: #aaa;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }
  img {
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 190px;
    border-radius: 6px;
  }
  span {
    color: #fff;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }
  
  footer {
    display: flex;
    gap: 10px;
    margin-top: 8px;
  }
  footer a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 4px;
    height: 48px;
    width: 48px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  footer a:hover {
    background: #fff;
  }
</style>